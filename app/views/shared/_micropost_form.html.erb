<%= form_for @micropost do |f| %>
  <%= render partial: "shared/error_messages", object: @micropost.errors %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>
  <%= f.submit t(".submit"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.micropost.image.content_types.join(',') %>
  </span>
<% end %>
<%= content_tag :div,
      id: "data_passing",
      max: Settings.micropost.image.max_size,
      info_1: t(".info_1"),
      info_2: t(".info_2") do %>
<% end %>
